<div class="row">
  <div class="thumbnail">
    <img src="<%= @album.cover %>">
    <div class="caption">
      <h3 class="title"><%= @album.title %></h3>
      <p class="artist"><%= @album.artist %></p>
    </div>
  </div>
  <div class="show">
    <%= @tracks.each do |t| %>
      <div class="track">
        <h3 class="name"><%= t.name %></h3>
        <p class="minutes"><%= t.minutes %>:00</p>
      </div>
    <%end%>
  </div>
</div>
